<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentScroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/MargenPadrao" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/MargenPadrao"
            android:text="Paciente:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <AutoCompleteTextView
            android:id="@+id/editTextCampoNomePaciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nome do paciente"
            android:inputType="text"
            android:padding="@dimen/MargenPadrao"
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/MargenPadrao"
            android:text="Data:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <DatePicker
            android:id="@+id/datePickerAgendarConsulta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/MargenPadrao" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/MargenPadrao"
            android:text="Horário:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TimePicker
            android:id="@+id/timePickerAgendarConsulta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/MargenPadrao" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/MargenPadrao"
            android:text="Descrição:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/editTextDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:padding="@dimen/MargenPadrao" >
        </EditText>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/MargenPadrao"
            android:text="Tipo da consulta:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/spinnerTipoConsulta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/MargenPadrao" />

        <Button
            android:id="@+id/buttonAgendarConsulta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/MargenPadrao"
            android:text="Agendar Consulta"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</ScrollView>