<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingBottom="4dp"
    android:paddingTop="4dp"
    android:weightSum="100" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="7dp"
        android:layout_weight="18" >

        <ImageView
            android:id="@+id/fotoPaciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="Imagem do paciente"
            android:src="@drawable/contato" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="42"
        android:orientation="vertical"
        android:weightSum="3" >

        <TextView
            android:id="@+id/nomePaciente"
            style="@style/textoConsultas"
            android:layout_width="match_parent"
            android:gravity="top|center_vertical"
            android:text="Nome Paciente"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Bairro"
            style="@style/textoConsultas"
            android:layout_width="match_parent"
            android:gravity="left|center_vertical"
            android:text="Bairro" />

        <TextView
            android:id="@+id/Horario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|center_vertical"
            android:textColor="@color/White"
            android:textSize="20sp"
            android:text="Horario" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/callButtonRow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="35" >

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:src="@android:drawable/stat_sys_phone_call" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100" >

        <FrameLayout
            android:id="@+id/callButtonRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="30" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:src="@drawable/atrasado" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="70" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:src="@drawable/ic_action_setinha" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>
