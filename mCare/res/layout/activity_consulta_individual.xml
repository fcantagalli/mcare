<ScrollView
     xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:tools="http://schemas.android.com/tools"
     android:id="@+id/scrollView1"
     android:layout_width="match_parent"
     android:layout_height="wrap_content" >
	
	
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    tools:context=".VisualizarConsultaIndividual"
	    android:orientation="vertical" >
	
	    
	    
	    <!-- CABECALHO: horario, nome, endereco -->
	    
	    <FrameLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:textAlignment="center" >
	        
	        <!-- DATA -->
		        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="02/03/2013"
	            android:textAlignment="center"
	            android:textSize="15sp" />
	        
	    </FrameLayout>
	        
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:orientation="horizontal" >
	        
		    <FrameLayout
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent" >
		        
		        <!-- HORA -->
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="14h"
		            android:textSize="40sp" />
		
		    </FrameLayout>
		
		    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:orientation="vertical" >
		        
		        <!-- NOME -->
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Bianca Letti"
		            android:textSize="25sp" />
		
		        <!-- ENDERECO -->
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Praca da arvore"
		            android:textSize="15sp" />
	
		   </LinearLayout>
	    </LinearLayout>
	    
	    
	    <!-- DESCRICAO DA CONSULTA -->
	    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:layout_marginTop="15dp"
		        android:orientation="vertical" >
		    
		    <!-- TITULO -->
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Descrição da consulta"
	            android:layout_marginTop="15dp"
	            android:textSize="15sp"
	            android:textStyle="bold" />
	        
	        <!-- DESCRICAO -->
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Esta consulta eh um retorno apos seis meses. Aparentemente nada de novo aconteceu desde a ultima consulta. Paciente sofreu um derrame ha dois anos."
	            android:textSize="12sp" />
	    
	
	        <!-- DADOS DA CONSULTA -->
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_marginTop="15dp"
	            android:orientation="vertical" >
	
	            <!-- TIPO DA CONSULTA -->
	            <TextView
	                android:text="Tipo de consulta"
	                style="@style/RotulosFormulario" />
	
		        <TextView
		           android:id="@+id/txtTipoConsulta"
		           android:text="Consultório"
		           style="@style/CamposTextoFormulario" />
	            
	            
	            <!-- PROBLEMA PRINCIPAL DA CONSULTA -->
	            <TextView
	                android:text="Problema principal da consulta"
	                style="@style/RotulosFormulario" />
	        
	            <TextView
		           android:id="@+id/txtDescricaoConsulta"
		           android:text="Esta é a descrição (exemplo) da consulta"
		           style="@style/CamposTextoFormulario" />
	            
	            
	            <!-- INSTRUMENTOS (geriatria) -->
	            <TextView
	                android:text="Instrumentos"
	                style="@style/RotulosFormulario" />
	
	            <ListView
	                android:id="@+id/listaInstrumentos"
	                style="@style/ListaPadrao" >
	            </ListView>
	            
	            
	            <!-- DIAGNÓSTICOS CLÍNICOS -->
	            <TextView
	                android:text="Diagnósticos Clínicos"
	                style="@style/RotulosFormulario" />
	
	            <ListView
	                android:id="@+id/listaDiagnosticosClinicos"
	                style="@style/ListaPadrao" >
	            </ListView>
	            
	            
	            <!-- PROCEDIMENTOS CIRÚRGICOS -->
	            <TextView
	                android:text="Procedimentos Cirúrgicos"
	                style="@style/RotulosFormulario" />
	
	            <ListView
	                android:id="@+id/listaProcedimentosCirurgicos"
	                style="@style/ListaPadrao" >
	            </ListView>
	            
	            
	            <!-- MEDICACOES EM USO -->
	            <TextView
	                android:text="Medicações em uso"
	                style="@style/RotulosFormulario" />
	            
	            <ListView
	                android:id="@+id/listaMedicacoesEmUso"
	                style="@style/ListaPadrao" >
	            </ListView>
	            
	            
	            <!-- MEDICACOES PREVIAS -->
	            <TextView
	                android:text="Medicações prévias"
	                style="@style/RotulosFormulario" />
	
	
	            <ListView
	                android:id="@+id/listaMedicacoesPrevias"
	                style="@style/ListaPadrao" >
	            </ListView>
	            
	            
	            <!-- RESULTADOS DE EXAMES RELEVANTES -->
	            <TextView
	                android:text="Resultados de exames relevantes"
	                style="@style/RotulosFormulario" />
	            
	            <TableRow
			        android:id="@+id/tableRow1"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:weightSum="2.0" >
			
			        <Button
			            android:id="@+id/botaoFotos"
			            style="@style/ButtonsAgenda"
			            android:layout_marginRight="8dp"
			            android:text="Fotos" />
			
			        <Button
			            android:id="@+id/botaoOutros"
			            style="@style/ButtonsAgenda"
			            android:layout_marginRight="8dp"
			            android:text="Outros" />
			    </TableRow>
			    
	            
	            <!-- INTERNACOES HOSPITALARES -->
	            <TextView
	                android:text="Internações hospitalares"
	                style="@style/RotulosFormulario" />
	
	            <ListView
	                android:id="@+id/listaInternacoesHospitalares"
	                style="@style/ListaPadrao" >
	            </ListView>
	            
	            
	            <!-- EXAMES SOLICITADOS AO FIM DA CONSULTA -->
	            <TextView
	                android:text="Exames solicitados ao fim da consulta"
	                style="@style/RotulosFormulario" />
	
	            <ListView
	                android:id="@+id/listaExamesSolicitados"
	                style="@style/ListaPadrao" >
	            </ListView>
	            
	            
	            <!-- MUDANCAS NA MEDICACAO -->
	            <TextView
	                android:text="Mudanças na medicação"
	                style="@style/RotulosFormulario" />
	            
	            <ListView
	                android:id="@+id/listaMudancasMedicacao"
	                style="@style/ListaPadrao" >
	            </ListView>
	            
	            
	            <!-- ORIENTACOES AO FIM DA CONSULTA -->
	            <TextView
	                android:text="Orientações ao fim da consulta"
	                style="@style/RotulosFormulario" />
	
	            <TextView
		           android:id="@+id/txtOrientacoesConsulta"
		           android:text="Estas são as orientações dadas ao fim da consulta."
		           style="@style/CamposTextoFormulario" />
	            
	        </LinearLayout>
	
	       
	    </LinearLayout>
	
	    
	    
	    <!-- BOTOES -->
	    <TableRow
	        android:id="@+id/tableRow1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:weightSum="2.0" >
	
	        <Button
	            android:id="@+id/button1"
				style = "@style/ButtonsAgenda"
	            android:text="Cancelar consulta"
	            android:layout_marginRight="8dp" />
	
	        <Button
	            android:id="@+id/button2"
	            style="@style/ButtonsAgenda"
	            android:layout_marginLeft="8dp"
	            android:text="Informações do paciente" />
	
	    </TableRow>
	</LinearLayout>
</ScrollView>