<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:background="@color/AliceBlue"
    android:orientation="vertical" >

   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingLeft="10dp"
        android:background="@color/AliceBlue2"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableBottom="@android:drawable/divider_horizontal_dark"
        android:gravity="center_vertical"
        android:textSize="17sp"
        android:text="Treatment Duration: "
        android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <Spinner
            android:id="@+id/spinner_days"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/spinner_weeks"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingLeft="10dp"
        android:orientation="horizontal" >
        
        <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="17sp"
        android:text="Dosing Frequency :"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <Spinner
            android:id="@+id/spinner_period"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingLeft="10dp"
        android:background="@color/AliceBlue2" >
        
        <Button
         android:id="@+id/button_plus_hours"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:layout_gravity="center_vertical"
         android:textSize="18sp"
         android:text="Set Time" />
        
        <TextView
            android:id="@+id/text_hours_medicine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:hint="Ex: 6:00 , 18:00"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Msg: "
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <EditText
            android:id="@+id/text_recommendations"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center|bottom"
            android:hint="Msg to take the medicine" >

            <requestFocus />
        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingLeft="10dp"
        android:background="@color/AliceBlue2"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Missed dose after:"
            android:gravity="center_vertical"
            android:textSize="17sp"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <Spinner
            android:id="@+id/spinner_missing_delay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center" />
        <Spinner
            android:id="@+id/spinner_missing_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Msg: "
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    
		    <EditText
		        android:id="@+id/text_recommendation_delay"
		        android:layout_width="match_parent"
		        android:layout_height="35dp"
		        android:ems="10"
		        android:gravity="center"
		        android:hint="Msg for delayed dose" >
		     </EditText>   
	</LinearLayout>
	
</LinearLayout>
