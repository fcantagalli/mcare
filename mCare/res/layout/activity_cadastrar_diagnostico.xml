<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentScroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/MargenPadrao" >

        <!--  Nome do diagnostico -->
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/MargenPadrao"
            android:text="Nome do diagnostico:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <AutoCompleteTextView
            android:id="@+id/editTextCampoNomeDiagnostico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nome do diagnostico:"
            android:inputType="textCapSentences"
            android:padding="@dimen/MargenPadrao"
            android:textColor="@color/Black" />
        
        
        <!-- BOTAO -->
        <Button
            android:id="@+id/buttonCadastrarDiagnostico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/MargenPadrao"
            android:text="Cadastrar diagnostico"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</ScrollView>