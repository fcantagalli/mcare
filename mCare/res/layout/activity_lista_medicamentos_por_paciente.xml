<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListaMedicamentosPorPaciente" >

    <LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    android:orientation="vertical" >
	    
	    <TextView
	        android:id="@+id/tituloTelaMedicamentosPaciente"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="TITULO"
	        style="@style/Topicos" />
	    
	    
	    <!-- MEDICAMENTOS ATUAIS -->
	    <TextView
	        android:id="@+id/tituloTelaMedicamentosAtuais"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="6dp"
	        android:text="ATUAIS"
	        style="@style/RotulosFormulario" />
	    
	    <ListView
	        android:id="@+id/lstMedicamentosAtuais"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:drawSelectorOnTop="false"
	        android:layout_marginTop="6dp" >
	    </ListView>
	    
	    <!-- MEDICAMENTOS ATUAIS -->
	    <TextView
	        android:id="@+id/tituloTelaMedicamentosAnteriores"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="12dp"
	        android:text="ANTERIORES" 
	        style="@style/RotulosFormulario" />
	    
	    <ListView
	        android:id="@+id/lstMedicamentosAnteriores"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:drawSelectorOnTop="false"
	        android:layout_below="@+id/adicionarLayout"
	        android:layout_marginTop="6dp" >
	    </ListView>

	</LinearLayout>
</RelativeLayout>